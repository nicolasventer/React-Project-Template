{
	"name": "client",
	"type": "module",
	"scripts": {
		"envDev": "bun run _genClientEnv.ts",
		"envProd": "cross-env B_PROD=true bun run _genClientEnv.ts",
		"dev": "bun run envDev && bunx --bun vite",
		"devs": "bun run ./_run.ts",
		"genHtml": "bun run ./node_modules/easy-react-router/build/plugin/_genRoutes.ts --html dist/index.html",
		"genApi": "bun run _genApi.ts",
		"buildDev": "bun run envDev && bun run _build.ts && bun run genHtml",
		"buildProd": "bun run envProd && bun run _build.ts && bun run genHtml",
		"build": "bun run buildDev",
		"preview": "serve -l 4173 ./dist",
		"previewProd": "bun run _previewProd.ts",
		"deploy": "bun run _deploy.ts",
		"buildDeploy": "bun run buildProd && bun run deploy",
		"devhost": "bunx --bun vite --host",
		"devhttps": "cross-env USE_HTTPS=true npx vite",
		"devhttpshost": "cross-env USE_HTTPS=true npx vite --host",
		"_build": "bunx --bun vite build # bun run build is preferred",
		"_preview": "vite preview",
		"doc": "typedoc && cmd /c \"start typedoc_out/index.html\"",
		"test": "bunx playwright test",
		"cov": "cross-env USE_COVERAGE=true bunx playwright test && cmd /c \"start coverage-reports/index.html\"",
		"testui": "bunx playwright test --ui",
		"testdebug": "cross-env USE_ONE=true bunx playwright test --debug",
		"testhtml": "cross-env USE_HTML=true bunx playwright test",
		"testhtmlone": "cross-env USE_HTML=true, USE_ONE=true bunx playwright test",
		"codegen": "bunx playwright codegen # --viewport-size=\"1600,920\"",
		"lint": "eslint .",
		"lintfix": "eslint --fix .",
		"depgraph": "depcruise --version && depcruise --config depcruise-config.cjs --output-type archi src | dot -T svg | depcruise-wrap-stream-in-html > graph-dependencies.html && cmd /c \"start graph-dependencies.html\"",
		"cap": "bunx cap open # bunx cap init, bunx cap sync"
	},
	"devDependencies": {
		"@capacitor/cli": "7.4.2",
		"@eslint/js": "9.31.0",
		"@mdx-js/rollup": "3.1.0",
		"@playwright/test": "1.54.1",
		"@types/bun": "1.2.19",
		"@types/dom-view-transitions": "1.0.6",
		"@types/node": "24.0.15",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"@typescript-eslint/eslint-plugin": "8.38.0",
		"@vitejs/plugin-react": "4.7.0",
		"cross-env": "7.0.3",
		"dependency-cruiser": "16.10.4",
		"eslint": "9.31.0",
		"eslint-plugin-no-relative-import-paths": "1.6.1",
		"eslint-plugin-project-structure": "3.13.3",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "5.2.0",
		"eslint-plugin-react-refresh": "0.4.20",
		"globals": "16.3.0",
		"jest": "30.0.4",
		"monocart-coverage-reports": "2.12.6",
		"monocart-reporter": "2.9.21",
		"ts-morph": "26.0.0",
		"tslib": "2.8.1",
		"typedoc-plugin-missing-exports": "4.0.0",
		"typescript-eslint": "8.38.0",
		"vite": "7.0.5",
		"vite-plugin-mkcert": "1.17.8"
	},
	"dependencies": {
		"@capacitor/android": "7.4.2",
		"@capacitor/app": "7.0.1",
		"@capacitor/core": "7.4.2",
		"@capacitor/status-bar": "7.0.1",
		"@elysiajs/eden": "1.3.2",
		"@mantine/carousel": "8.2.1",
		"@mantine/core": "8.2.1",
		"@mantine/hooks": "8.2.1",
		"@sinclair/typebox": "0.34.37",
		"clsx": "2.1.1",
		"dayjs": "1.11.13",
		"easy-react-router": "easy-react-router-1.0.0.tgz",
		"embla-carousel": "8.6.0",
		"embla-carousel-react": "8.6.0",
		"jwt-decode": "4.0.0",
		"lucide-react": "0.525.0",
		"motion": "12.23.6",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-hot-toast": "2.5.2",
		"react-icons": "5.5.0",
		"react-tooltip": "5.29.1"
	}
}
